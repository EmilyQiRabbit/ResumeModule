{
  "compilerOptions": {
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": false,
    "importHelpers": true,
    "outDir": "dist",
    "jsx": "react",
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["client/pages/*"],
      "@components/*": ["client/components/*"],
      "@style/*": ["client/style/*"],
      "@images/*": ["client/images/*"]
      // ...按照 webpack alias 补充配置
    }
  },
  "include": ["server/*", "server/ssr/server.tsx", "client/*", "client/*/*"]
}
